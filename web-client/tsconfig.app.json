{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "types": ["vite/client", "vue"],
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,               // <-- override the base (it sets noEmit: true)
    "declaration": true,           // <-- OK for referenced projects
    "emitDeclarationOnly": true,   // <-- donâ€™t emit JS, just d.ts when/if you run tsc -b
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "vue-shim": ["./vue-shim.d.ts"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "env.d.ts",
    "sliderule.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "workerMimeTypePlugin.ts"
  ],
  "exclude": ["node_modules", "tests/**"]
}
