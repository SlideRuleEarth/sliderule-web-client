{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noEmit": true,
    "emitDeclarationOnly": false,

    "types": ["vitest/globals", "vite/client", "vue"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "vue-shim": ["./vue-shim.d.ts"]
    }
  },
  "include": [
    "env.d.ts",
    "sliderule.d.ts",
    "vue-shim.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vite",
    "coverage"
  ]
}
