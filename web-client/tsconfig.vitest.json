{
  "extends": "./tsconfig.json",
  "references": [{ "path": "./tsconfig.app.json" }],  // <-- tell TS that src/** lives here
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["vite/client", "node"], 
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vitest.config.ts",
    "vitest.workspace.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
